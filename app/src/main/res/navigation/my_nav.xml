<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/initialFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.instagramclone.fragments.login_screen.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_initialFragment"
            app:destination="@id/initialFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.instagramclone.fragments.MainScreen"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen">
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
        <fragment
            android:id="@+id/searchFragment"
            android:name="com.example.instagramclone.fragments.SearchScreen"
            android:label="fragment_search_screen"
            tools:layout="@layout/fragment_search_screen">
            <argument
                android:name="numbers"
                android:defaultValue="222"
                app:argType="integer" />
        </fragment>
    <fragment
        android:id="@+id/initialFragment"
        android:name="com.example.instagramclone.fragments.InitialFragment"
        android:label="fragment_initial"
        tools:layout="@layout/fragment_initial" >
        <action
            android:id="@+id/action_initialFragment_to_mainScreen"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_initialFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.instagramclone.fragments.signup_screen.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/action_signupFragment_to_mainScreen"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.instagramclone.fragments.profile_screen.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/reelsFragment"
        android:name="com.example.instagramclone.fragments.reels_screen.ReelsFragment"
        android:label="fragment_reels"
        tools:layout="@layout/fragment_reels" />
</navigation>
