<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/initialFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.instagramclone.fragments.login_screen.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_initialFragment"
            app:destination="@id/initialFragment" />
    </fragment>
        <fragment
            android:id="@+id/mainScreen"
            android:name="com.example.instagramclone.fragments.main_screen.MainScreen"
            android:label="fragment_main_screen"
            tools:layout="@layout/fragment_main_screen">
            <action
                android:id="@+id/action_mainScreen_to_searchScreen"
                app:destination="@id/searchScreen" />
        </fragment>
        <fragment
            android:id="@+id/searchScreen"
            android:name="com.example.instagramclone.fragments.SearchScreen"
            android:label="fragment_search_screen"
            tools:layout="@layout/fragment_search_screen">
            <argument
                android:name="numbers"
                android:defaultValue="222"
                app:argType="integer" />
        </fragment>
    <fragment
        android:id="@+id/initialFragment"
        android:name="com.example.instagramclone.fragments.InitialFragment"
        android:label="fragment_initial"
        tools:layout="@layout/fragment_initial" >
        <action
            android:id="@+id/action_initialFragment_to_mainScreen"
            app:destination="@id/mainScreen" />
        <action
            android:id="@+id/action_initialFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>
