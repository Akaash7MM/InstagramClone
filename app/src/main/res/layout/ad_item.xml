<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="natgeo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:textAlignment="textStart"
            app:drawableStartCompat="@drawable/story_image" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:src="@drawable/vertical_ellipsis"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Nature"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:paddingTop="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/likeheart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/heart"/>
            <ImageView
                android:id="@+id/likeheartFilled"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/heartfilled"
                android:alpha="0"/>
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15,115 likes"
        android:textColor="@color/black"
        android:paddingStart="11dp"
        android:paddingTop="5dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/contentDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingHorizontal="11dp"
        android:text="@string/ad_desc"
        android:textColor="@color/black"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Hours ago"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:textSize="12sp"
        android:textStyle="normal"/>

</LinearLayout>